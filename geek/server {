server {
    # listen 80;

    listen 443 ssl;

    server_name www.fixter.org www.fixter.camp;

    ssl_certificate /etc/letsencrypt/live/www.fixter.org/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/www.fixter.org/privkey.pem;

#    ssl_certificate /etc/letsencrypt/live/www.fixter.camp/fullchain.pem;
#    ssl_certificate_key /etc/letsencrypt/live/www.fixter.camp/privkey.pem;

    ssl_dhparam /home/ubuntu/dhparams.pem;


    server_name 0.0.0.0;

    location = /favicon.ico { access_log off; log_not_found off; }
    location /static/ {
        root /home/ubuntu/fixtergeek/;
    }

    location / {
        include proxy_params;
        proxy_pass http://unix:/home/ubuntu/fixtergeek/geek.sock;
    }
}

server {
    listen 80;
    server_name fixter.org;
    return 301 https://$host$request_uri;
}